pipeline{
   agent any

   environment{
       VENV = 'venv'
   }
      

}
stages {
   stage('checkout'){
      steps {
         git 'https://github.com/munguriek/june-2025-class-demo-1-django.git'  //github.com/your-repo/your-project.git
      }
   }
   stage('setup virtual Environment'){
      steps {
         sh 
            """
            python3 -m venv $VENV
            . ${VENV}/bin/activate
            pip install -r requirements.txt
            """
      }
   }
   stage('run tests'){
      steps {
         sh 
            """
            . ${VENV}/bin/activate
            pytest tests/
            """
      }
   }
}